{
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/index.ts"]
    }
  },
  "include": ["*.ts", "src", "."],
  "exclude": ["node_modules"]
}
